<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="16dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/color_black"
        android:paddingStart="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/row_fav_textview"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="ADD TASK" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:src="@drawable/delete"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:id="@+id/row_fav_image"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="ADD TASK" />

    <TextView
        android:background="@color/colorAccent"
        android:layout_below="@+id/row_fav_textview"
        android:layout_marginEnd="5dp"
        android:textColor="@color/color_black"
        android:paddingStart="15dp"
        android:id="@+id/row_fav_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="28-4-2021" />
    <TextView
        android:background="@color/colorAccent"
        android:layout_below="@+id/row_fav_date"
        android:layout_marginEnd="5dp"
        android:textColor="@color/color_black"
        android:paddingStart="15dp"
        android:id="@+id/row_fav_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="04:25:30" />
</RelativeLayout>