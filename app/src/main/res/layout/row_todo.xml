<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <TextView
            android:textSize="16dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/color_black"
           android:paddingStart="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/row_textview"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="ADD TASK" />

        <ImageView
            android:layout_centerHorizontal="true"
           android:layout_toStartOf="@+id/row_delete_image"
            android:src="@drawable/uncheckedheart"
            android:gravity="center"
            android:padding="7dp"
            android:id="@+id/row_heart_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="ADD TASK" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:src="@drawable/delete"
            android:gravity="center"
            android:id="@+id/row_delete_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="ADD TASK" />

        <TextView
            android:background="@color/colorAccent"
            android:paddingStart="15dp"
            android:layout_below="@+id/row_textview"
            android:layout_marginEnd="5dp"
            android:textColor="@color/color_white"
            android:id="@+id/row_todo_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="28-4-2021" />
        <TextView
            android:background="@color/colorAccent"
            android:paddingStart="15dp"
            android:layout_below="@+id/row_todo_date"
            android:layout_marginEnd="5dp"
            android:textColor="@color/color_white"
            android:id="@+id/row_todo_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="04:25:30" />

</RelativeLayout>